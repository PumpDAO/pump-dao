  {
    "extends": "solhint:recommended",
    "plugins": [],
    "rules": {
      "avoid-throw": "off",
      "avoid-suicide": "error",
      "avoid-sha3": "warn",
      "compiler-version": ["error","^0.8.0"],
      "ordering": "error",
      "constructor-syntax": "error",
      "reentrancy": "warn",
      "max-line-length": ["error", 120],
      "no-unused-vars": "error",
      "func-visibility": ["warn", {"ignoreConstructors":true}],
      "reason-string": ["warn",{"maxLength":32}]
    }
  }
